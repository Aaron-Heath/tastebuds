<div class="row d-flex justify-content-center">
    {{!-- Recipe Update (PUT request) --}}
    <div class="form-container col-md-4">
        <form class="form">

            <h1 class="username" data-user-id="2">Update a Recipe</h1>
            <div class="row">

                <div class="mb-3 col-6">
                    <input class="form-control" type="text" id="title" data-recipe-id="{{recipe.id}}" name="title" required placeholder="{{recipe.title}}">
                </div>
            </div>

            <div class="mb-3">
                <input class="form-control" type="text" id="ingredients" name="ingredients" required
                    placeholder="Ingredients">
            </div>

            <div class="mb-3">
                <input class="form-control" type="text" id="directions" name="directions" required
                    placeholder="Directions">
            </div>

            <div class="mb-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

        </form>
    </div>
</div>
<script src="./js/recipeUpdate.js"></script>