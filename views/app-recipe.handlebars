<div class="app-main">
    <div class="card">
        <div class="card-body">
            <h1>{{ recipe.title }} <a href="/app/recipe/update/{{recipe.id}}">
                    <button type="button" class="edit-btn"><img width="30" height="30"
                            src="https://img.icons8.com/ios/50/000000/settings--v1.png" alt="settings--v1" />
                    </button>
                </a>
            </h1>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Ingredients</h2>
            <ul class="list-group list-group-flush">
                {{#each recipe.ingredients as |ingredient|}}
